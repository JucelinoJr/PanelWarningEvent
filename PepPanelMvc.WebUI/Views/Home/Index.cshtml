@model PepPanelMvc.WebUI.Models.HomeViewModel
@{
    ViewData["Title"] = "Painel";
}

@* eventos *@
<div class="row">
    <div class="card">
        <div class="card-header">
            <h6 class="form-label text-center">EVENTOS</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>Descrição</td>
                                <td>Responsável</td>
                                <td>Data do Evento</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dados in Model.eventDTO)
                            {
                                <tr>
                                    <td>@dados.Description</td>
                                    <td>@dados.Responsible</td>
                                    <td>@dados.EventDateTime</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br/>
@* avisos *@
<div class="row">
    <div class="card">
        <div class="card-header">
            <h6 class="form-label text-center">AVISOS</h6>
        </div>
        <div class="card-body">
            @foreach (var dados in Model.warningDTO)
            {
                <div class="alert alert-danger" role="alert">
                    <p>@dados.Description</p>
                    <hr>
                    <p class="mb-0">@dados.CreateDate</p>
                </div>
            }
        </div>
    </div>
</div>
<br />
<br />

