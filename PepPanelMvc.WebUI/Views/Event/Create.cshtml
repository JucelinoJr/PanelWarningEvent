@model PepPanel.Application.DTOs.EventDTO

@{
    ViewData["Title"] = "Registrar novo Evento";
}

<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-horizontal">

                <div class="row form-group">
                    <div class="col-md-12 form-control-sm">
                        <label asp-for="Description" class="col-md-4 control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4 form-control-sm">
                        <label asp-for="EventDateTime" class="col-md-4 control-label"></label>
                        <input asp-for="EventDateTime" class="form-control" />
                        <span asp-validation-for="EventDateTime" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-control-sm">
                        <label asp-for="Responsible" class="col-md-4 control-label"></label>
                        <input asp-for="Responsible" class="form-control" />
                        <span asp-validation-for="Responsible" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-success btn-sm">
                            Criar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-dark btn-sm">Voltar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
