@model IEnumerable<PepPanel.Application.DTOs.EventDTO>

@{
    ViewData["Title"] = "Gerenciamento de Eventos";
}


<div class="card">
    <div class="card-header">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div>
                    <div class="pull-left">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <span title="Registrar novo evento" class="fas fa-plus"></span> Novo Evento
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>@Html.DisplayNameFor(model => model.Description)</td>
                        <td>@Html.DisplayNameFor(model => model.Responsible)</td>
                        <td>@Html.DisplayNameFor(model => model.EventDateTime)</td>
                        <td>Editar</td>
                        <td>Excluir</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dados in Model)
                    {
                        <tr>
                            <td>@dados.Id</td>
                            <td>@dados.Description</td>
                            <td>@dados.Responsible</td>
                            <td>@dados.EventDateTime</td>
                            <td><a asp-action="Edit" asp-route-id="@dados.Id"> Editar </a></td>
                            <td><a asp-action="Delete" asp-route-id="@dados.Id"> Excluir </a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

